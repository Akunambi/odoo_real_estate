<?xml version="1.0"?>
<odoo>
    <!-- ESTATE PROPERTY TYPE -->
    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">Tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <group invisible="">
                <button name="set_status_accepted" type="object" icon="fa-check"/>
                <button name="set_status_rejected" type="object" icon="fa-times"/>
                </group>
                <field name="status"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_tag_form" model="ir.ui.view">
        <field name="name">form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Properties Tags">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>